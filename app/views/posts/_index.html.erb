<table class="table">
  <thead>
    <tr>
      <td>Title</td>
      <td>Action</td>
      <td>Comment count</td>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |p| %>
      <tr>
        <td><%= render_post_button(p) %></td>
        <td><%= render_post_edit_button(p) %></td>
        <td><%= p.count_comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>